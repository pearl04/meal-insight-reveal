{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest.setup.js",
    "src/types/jest.d.ts",
    "src/types/testing-library.d.ts",
    "src/types/jest-dom.d.ts",
    "src/types/nutrition.d.ts"
  ]
}
